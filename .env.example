# TGVault Environment Configuration
# Copy to .env and fill in values

# Telegram Bot (from @BotFather)
BOT_TOKEN=

# WebApp URL (must be HTTPS in production, domain set in BotFather)
WEBAPP_URL=https://your-domain.com

# JWT signing secret (generate random 64+ char string)
JWT_SECRET=

# Postgres (for docker-compose)
POSTGRES_USER=tgvault
POSTGRES_PASSWORD=
POSTGRES_DB=tgvault

# Backend URL (for bot to call API)
BACKEND_URL=http://backend:8000

# Development: API URL for WebApp (when backend runs separately)
# VITE_API_URL=http://localhost:8000
